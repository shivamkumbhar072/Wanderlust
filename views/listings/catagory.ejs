<%- layout("layouts/boilerplate") %>


    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-8">
                <h2 id="category-title">Great picks under Category : <%= id %></h2>

            </div>
            <div class="col-md-4 text-end">
                <div class="form-check-reverse form-switch ">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display Taxes</label>
                </div>
                
            </div>
        </div>
    </div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-1">
            <% for(let listing of allListings) { %>
                <a href="/listings/<%= listing._id%>" class="listing-link ">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url%>" class="card-img-top" alt="listing image"
                            style="height: 20rem; object-fit: cover;">
                        <div class="card-img-overlay">Available</div>
                        <div class="card-body">
                            <b>
                                <%= listing.title %>
                            </b><br>
                            &#8377 <%= listing.price.toLocaleString('en-IN') %> / night
                            <i class = "tax-info">&nbsp;+ 18% GST</i><br>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>

            
